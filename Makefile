.PHONY: *

# =============================================================================
# Remote commands
# =============================================================================

deploy:
	scp -r \
		containers \
		hosts/$(HOST)/docker-compose.yaml \
		Makefile \
		secrets.env \
		$(HOST):~/infra
	ssh $(HOST) 'make -C ~/infra up'

# =============================================================================
# On-host commands
# =============================================================================

up:
	docker compose up -d --build
